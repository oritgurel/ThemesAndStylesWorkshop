<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/li_news_image"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginVertical="8dp"
        android:layout_marginHorizontal="20dp"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- TODO STEP 5: change the textColor to use theme colorOnSurface in both textViews. when not assigning a background to the view, it uses colorSurface from theme. Therefore the text color should use colorOnSurface. When theme changes, the color will be decided by the declared theme attribute. -->
    <TextView
        android:id="@+id/li_news_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="16dp"
        tools:text="blablablablabal"
        android:textColor="#000000"
        app:layout_constraintTop_toBottomOf="@id/li_news_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


    <TextView
        android:id="@+id/li_news_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="50dp"
        android:gravity="start"
        android:ellipsize="end"
        android:maxLines="1"
        tools:text="blablablablabal"
        android:textColor="@color/colorOnPrimary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/li_news_title"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <!-- TODO STEP 6: change the background of the divider view to use theme colorOnSurface, to match the textViews text color.-->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorOnPrimary"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintTop_toBottomOf="@id/li_news_desc"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>