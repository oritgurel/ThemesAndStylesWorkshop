<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    app:cardPreventCornerOverlap="false">

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <!--TODO STEP 1: Create values resource file shape.xml at res/values/-->
    <!--TODO STEP 2: In shape.xml, Declare a style overlay called ShapeAppearanceOverlay_cardView. Set attributes for it: cornerFamily and cornerSize for various corners.-->
    <!--TODO STEP 3: Create a style "Widget.AppTheme.MaterialCardView which inherits from "Widget.MaterialComponents.CardView".
            Give it one attribute: "shapeAppearanceOverlay" and set its value to our newly created card shape overlay.-->
    <!--TODO STEP 7: Set the ImageView shapeAppearanceOverly directly to this ShapeableImageView using app:shapeAppearanceOverlay attr. Run the app - see our item shape now. -->
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/li_news_image"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/li_news_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="16dp"
        android:textAppearance="?attr/textAppearanceHeadline6"
        android:textColor="?attr/colorOnSurface"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/li_news_image"
        tools:text="blablablablabal" />

    <TextView
        android:id="@+id/li_news_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="50dp"
        android:ellipsize="end"
        android:gravity="start"
        android:maxLines="1"
        android:textAppearance="?attr/textAppearanceSubtitle2"
        android:textColor="?attr/colorOnSurface"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/li_news_title"
        tools:text="blablablablabal" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>