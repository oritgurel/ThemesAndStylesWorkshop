<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/li_news_image"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginVertical="8dp"
        android:layout_marginHorizontal="20dp"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!--TODO STEP 1: add theme's textAppearance of type Headline6 to li_news_title
        It is recommended to apply the theme's textAppearance to all of our texts to keep the styling consistent.-->

    <TextView
        android:id="@+id/li_news_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="16dp"
        tools:text="blablablablabal"
        android:textColor="?attr/colorOnSurface"
        app:layout_constraintTop_toBottomOf="@id/li_news_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!--TODO STEP 2: add theme's textAppearance of type Subtitle2 to li_news_desc-->

    <TextView
        android:id="@+id/li_news_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="50dp"
        android:gravity="start"
        android:ellipsize="end"
        android:maxLines="1"
        tools:text="blablablablabal"
        android:textColor="?attr/colorOnSurface"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/li_news_title"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?attr/colorOnSurface"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintTop_toBottomOf="@id/li_news_desc"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>