<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryDarkColor</item>
        <item name="colorOnPrimarySurface">@color/primaryTextColor</item>
        <item name="android:textColorPrimary">@color/primaryTextColor</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryVariant">@color/secondaryDarkColor</item>
        <item name="colorOnSecondary">@color/secondaryTextColor</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <!--  Divider-->
        <item name="android:listDivider">@drawable/news_divider</item>
        <!-- Custom attr-->
        <item name="popupMenuTextColor">?attr/colorOnSurface</item>
        <!-- TextAppearance-->
        <item name="textAppearanceHeadline6">@style/TextAppearance.MdcTypographyStyles.Headline6</item>
        <item name="textAppearanceHeadline5">@style/TextAppearance.MdcTypographyStyles.Headline5</item>
        <item name="textAppearanceSubtitle2">@style/TextAppearance.MdcTypographyStyles.Subtitle2</item>
        <item name="textAppearanceButton">@style/TextAppearance.MdcTypographyStyles.Button</item>
        <!-- Shapes-->
        <item name="materialCardViewStyle">@style/Widget.AppTheme.MaterialCardView</item>
        <item name="floatingActionButtonStyle">@style/Widget.AppTheme.FAB</item>
    </style>

    <style name="AppTheme.Pro">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColorPro</item>
        <item name="colorPrimaryVariant">@color/primaryDarkColorPro</item>
        <item name="colorOnPrimary">@color/primaryTextColorPro</item>
        <item name="colorOnPrimarySurface">@color/primaryTextColorPro</item>
        <item name="android:textColorPrimary">@color/primaryTextColorPro</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryColorPro</item>
        <item name="colorSecondaryVariant">@color/secondaryDarkColorPro</item>
        <item name="colorOnSecondary">@color/secondaryTextColorPro</item>
        <!-- Customize your theme here. -->
    </style>

<!--     Theme Overlays-->
<!--     Toolbar-->
    <style name="ToolbarPopupOverlay" parent="">
        <!-- This is a custom attribute we declared:-->
        <item name="android:textColorPrimary">?attr/popupMenuTextColor</item>
    </style>
    <!--    empty parent indicates themeOverlay-->
    <style name="MyThemeOverlay_Toolbar" parent="">
        <item name="android:textColorPrimary">@color/colorOnPrimary</item>
    </style>

    <!--    Required to use toolbar-->
    <style name="Theme.ThemesAndStylesWorkshop.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.ThemesAndStylesWorkshop.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.ThemesAndStylesWorkshop.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>