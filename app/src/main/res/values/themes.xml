<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryDarkColor</item>
        <item name="colorOnPrimarySurface">@color/primaryTextColor</item>
        <item name="android:textColorPrimary">@color/primaryTextColor</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryVariant">@color/secondaryDarkColor</item>
        <item name="colorOnSecondary">@color/secondaryTextColor</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    <!--TODO STEP 2a: add custom attr. "IapDialogBackgroundTint" we just created here and set its value to "@color/primaryColorPro"-->
    <!--TODO STEP 2b: add custom attr. "IapDialogBtnTint" we just created here and set its value to "@color/primaryColor"-->
        <item name="IapDialogBackgroundTint">@color/primaryColorPro</item>
        <item name="IapDialogBtnTint">@color/primaryColor</item>
    </style>

    <style name="AppTheme.Pro">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColorPro</item>
        <item name="colorPrimaryVariant">@color/primaryDarkColorPro</item>
        <item name="colorOnPrimary">@color/primaryTextColorPro</item>
        <item name="colorOnPrimarySurface">@color/primaryTextColorPro</item>
        <item name="android:textColorPrimary">@color/primaryTextColorPro</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryColorPro</item>
        <item name="colorSecondaryVariant">@color/secondaryDarkColorPro</item>
        <item name="colorOnSecondary">@color/secondaryTextColorPro</item>
        <!-- Customize your theme here. -->
        <!--TODO STEP 3a: add custom attr. "IapDialogBackgroundTint" here and set its value to "@color/primaryColor"-->
        <!--TODO STEP 3b: add custom attr. "IapDialogBtnTint" here and set its value to "@color/primaryColorPro"-->
        <item name="IapDialogBackgroundTint">@color/primaryColor</item>
        <item name="IapDialogBtnTint">@color/primaryColorPro</item>
    </style>

    <!--TODO STEP 4: create theme overlay for IapDialog called "IapDialogOverlay". Add one attribute to it - android:backgroundTint, and set its value to be our new custom attr. "IapDialogBtnTint" from the theme."-->
    <!--TODO STEP 4a: [notice, button style is borderless, so we use backgroundTint to change its background]-->
    <style name="IapDialogOverlay" parent="">
        <item name="android:backgroundTint">?attr/IapDialogBtnTint</item>
    </style>

    <!--TODO STEP 5a: create a special dialog style called "AppTheme.IapDialogTheme" which inherits from "Theme.MaterialComponents.DayNight.Dialog.Alert. Add one attribute to it: "materialThemeOverlay" and set its value to our newly created "IapDialogOverlay".-->
    <!--TODO STEP 5b: Add a second attribute to it: "colorSurface" and set its value to "IapDialogBackgroundTint" from our theme.-->
    <style name="AppTheme.IapDialogTheme" parent="Theme.MaterialComponents.DayNight.Dialog.Alert">
        <item name="materialThemeOverlay">@style/IapDialogOverlay</item>
        <item name="colorSurface">?attr/IapDialogBackgroundTint</item>
    </style>

    <!-- Toolbar -->
    <style name="Theme.ThemesAndStylesWorkshop.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.ThemesAndStylesWorkshop.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>