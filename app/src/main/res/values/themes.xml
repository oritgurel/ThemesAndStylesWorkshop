<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <!--TODO STEP 2: Change parent of "AppTheme" theme from DayNight to Light    -->
    <!--TODO STEP 3: Add attribute to the theme that will allow force dark mode (supported from Android 10 (sdk 29)). This will invert the colors automatically by the system. Run the App, switch to dark theme and checkout the changes.-->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryDarkColor</item>
        <item name="colorOnPrimarySurface">@color/primaryTextColor</item>
        <item name="android:textColorPrimary">@color/primaryTextColor</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryVariant">@color/secondaryDarkColor</item>
        <item name="colorOnSecondary">@color/secondaryTextColor</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="IapDialogBackgroundTint">@color/primaryColorPro</item>
        <item name="IapDialogBtnTint">@color/primaryColor</item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.MdcTypographyStyles.Headline6</item>
        <item name="textAppearanceSubtitle2">@style/TextAppearance.MdcTypographyStyles.Subtitle2</item>
        <item name="android:listDivider">@drawable/news_divider</item>
        <item name="materialCardViewStyle">@style/Widget.AppTheme.MaterialCardView</item>
    </style>

    <style name="AppTheme.Pro">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColorPro</item>
        <item name="colorPrimaryVariant">@color/primaryDarkColorPro</item>
        <item name="colorOnPrimary">@color/primaryTextColorPro</item>
        <item name="colorOnPrimarySurface">@color/primaryTextColorPro</item>
        <item name="android:textColorPrimary">@color/primaryTextColorPro</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryColorPro</item>
        <item name="colorSecondaryVariant">@color/secondaryDarkColorPro</item>
        <item name="colorOnSecondary">@color/secondaryTextColorPro</item>
        <!-- Customize your theme here. -->
        <item name="IapDialogBackgroundTint">@color/primaryColor</item>
        <item name="IapDialogBtnTint">@color/primaryColorPro</item>
    </style>

    <style name="IapDialogOverlay" parent="">
        <item name="android:backgroundTint">?attr/IapDialogBtnTint</item>
    </style>

    <!--TODO STEP 9: Change "AppTheme.IapDialogTheme" parent's theme so the text color will fit both dark and light mode -->
    <style name="AppTheme.IapDialogTheme" parent="Theme.MaterialComponents.DayNight.Dialog.Alert">
        <item name="colorSurface">?attr/IapDialogBackgroundTint</item>
        <item name="materialThemeOverlay">@style/IapDialogOverlay</item>
    </style>
